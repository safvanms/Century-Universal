<div class="img js-fullheight"
  style="background-image: linear-gradient(to bottom right,#2b3745,#ba9c5c); min-height: 100%;">
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-4">
          <img class="loginlogo" src="/users/img/mypics/cuccLogo.jpg.png" style="width: 90px; height: 90px;" />
           <span ><img class="smalltitle" src="/users/img/mypics/cucc_name.png"</span>

        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="login-wrap p-0">

            <form action="/signup" method="post" class="signin-form">

              <div class="form-group">
                <input type="text" class="form-control" name="fname" placeholder="Enter Your First Name" required />
              </div>

              <div class="form-group">
                <input type="text" class="form-control" name="lname" placeholder="Enter Your Last Name" required />
              </div>

              <div class="form-group">
                <input type="number" class="form-control" name="number" placeholder="Mobile Number" required />
              </div>

              <div class="form-group">
                <input id="password-field" type="password" name="password" class="form-control" placeholder="Password"
                  required />
                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
              </div>

              <div class="form-group">
                <button type="submit" class="form-control btn submit px-3"
                  style="background-color: rgb(72, 178, 72)  ;">send OTP</button>
              </div>

            </form>
            <p class="w-100 text-center">
              Already have an Account ?
              <span>
                <a href="/login" style="color: rgb(236, 224, 11);">
                  LOGIN</a></span>
            </p>

            <p class="w-100 text-center text-uppercase">
              <span>
                <a href="/home" style="color: rgb(0, 0, 0);">
                  Continue as a Guest</a></span>
            </p>

          </div>
        </div>
      </div>
    </div>
  </section>

</div>