<div class="main-panel">
    <div class="content-wrapper">
        <div class="container">

            <div class="row w-50 mx-auto">

                <form action="/admin/add-news" method="post"  class="edit-form">

                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Add News</h2>
                    </div>

                    <div class="form-group mt-5">
                        <label for="category">Enter Event Month</label>
                        <input type="text" class="form-control mb-4" name="month" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Enter the Month" maxlength="3" style=" text-transform: capitalize; " required />

                    </div>

                    <div class="form-group mt-5">
                        <label for="category">Enter Event Date</label>
                        <input type="date" class="form-control mb-4" name="eventdate" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Enter the Date" required />

                    </div>

                    <div class="form-group mt-5">
                        <label for="category">Headline</label>
                        <textarea type="text" class="form-control mb-4" name="headline" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Headline" required style="height: 100px; width:300px; " ></textarea>

                    </div>

                    <div class="form-group mb-3">
                        <label for="description">News</label>
                        <textarea class="form-control validate" name="news"  rows="15" required=""></textarea>
                    </div>


            </div>
            <button type="submit" class="btn btn-primary mt-4" style="width: fit-content;margin-left: 45%;">Add
                News</button>
            </form>
        </div>
    </div>
</div>
</div>