<div class="img js-fullheight" style=" background-color: rgb(0, 0, 0); height: 100%;">
    <a class="" onclick="history.back()"><i class="fa fa-remove"
            style="font-size:24px; float: right; padding-top: 30px; padding-right: 30px; color: white;"></i></a>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-4">
                    <img class="playerimg" src="/users/img/mypics/loginavatar.png"
                        style="width: 100px; border-radius: 8px;" />
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                        <form action="/player-details" method="get" class="signin-form">

                            <div class="form-group">
                                <input type="text" name="playerName" class="form-control text-uppercase "
                                    value="{{user.fname}} {{user.lname}}"
                                    style="font-size: 15px; text-align: center; background-image: linear-gradient(to bottom right,hsl(0, 0%, 0%),#373635); pointer-events:none;" />
                            </div>



                            <div class="form-group">
                                <input type="text" name="gender" class="form-control"
                                    style="text-align: center ; background-image: linear-gradient(to bottom right,hsl(0, 0%, 0%),#373635);pointer-events:none; "
                                    value="{{user.number}}" />
                            </div>



                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

</div>